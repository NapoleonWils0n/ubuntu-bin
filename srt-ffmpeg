#!/bin/sh

#===============================================================================
# srt-ffmpeg - stream a file with srt
#===============================================================================


#===============================================================================
# script usage
#===============================================================================

usage () {
# if argument passed to function echo it
[ -z "${1}" ] || echo "! ${1}"
# display help
echo "\
$(basename "$0") -f file -i ip -p port"
exit 2
}

#===============================================================================
# error messages
#===============================================================================

INVALID_OPT_ERR='Invalid option:'
REQ_ARG_ERR='requires an argument'
WRONG_ARGS_ERR='wrong number of arguments passed to script'


#===============================================================================
# check number of aruments passed to script
#===============================================================================

[ $# -gt 0 ] || usage "${WRONG_ARGS_ERR}"


#===============================================================================
# getopts check options passed to script
#===============================================================================

while getopts ':f:i:p:h' opt
do
  case ${opt} in
     f) file="${OPTARG}";;
     i) ip="${OPTARG}";;
     p) port="${OPTARG}";;
     h) usage;;
     \?) usage "${INVALID_OPT_ERR} ${OPTARG}" 1>&2;;
     :) usage "${INVALID_OPT_ERR} ${OPTARG} ${REQ_ARG_ERR}" 1>&2;;
  esac
done
shift $((OPTIND-1))


#===============================================================================
# defaults
#===============================================================================

# default ip
ip_default='192.168.1.131'

# default port
port_default='6882'


#===============================================================================
# srt_ffmpeg function
#===============================================================================

srt_ffmpeg () {
ffmpeg -re -i "${file}" -c copy -f mpegts "srt://${ip:=${ip_default}}:${port:=${port_default}}?pkt_size"
}

#===============================================================================
# run srt_ffmpeg function
#===============================================================================

srt_ffmpeg
